{
	"bugs": "https://github.com/cedx/setup-hashlink/issues",
	"description": "Set up your GitHub Actions workflow with a specific version of the HashLink VM.",
	"license": "MIT",
	"name": "@cedx/setup-hashlink",
	"private": true,
	"repository": "cedx/setup-hashlink",
	"type": "module",
	"version": "4.0.1",
	"author": {
		"email": "cedric@belin.io",
		"name": "CÃ©dric Belin",
		"url": "https://belin.io"
	},
	"bin": {
		"setup_hashlink": "./bin/setup_hashlink.cjs"
	},
	"dependencies": {
		"@actions/core": "^1.10.1",
		"@actions/tool-cache": "^2.0.1",
		"execa": "^8.0.1",
		"semver": "^7.6.0"
	},
	"devDependencies": {
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^20.11.20",
		"@types/semver": "^7.5.8",
		"del": "^7.1.0",
		"esbuild": "^0.20.1",
		"eslint": "^8.57.0",
		"typedoc": "^0.25.8",
		"typescript": "^5.3.3",
		"typescript-eslint": "^7.0.2"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"exports": {
		"types": "./lib/index.d.ts",
		"import": "./lib/index.js"
	},
	"files": [
		"lib/",
		"src/"
	],
	"imports": {
		"#setupHashlink": {
			"types": "./lib/index.d.ts",
			"import": "./lib/index.js"
		}
	},
	"keywords": [
		"action",
		"ci",
		"github",
		"hashlink",
		"test",
		"vm",
		"workflow"
	],
	"scripts": {
		"build": "tsc --project src/tsconfig.json && esbuild \"--banner:js=#!/usr/bin/env node\" --bundle --legal-comments=none --minify --outfile=bin/setup_hashlink.cjs --platform=node src/cli.ts",
		"clean": "node tool/clean.js",
		"dist": "npm run clean && npm run build && node tool/dist.js && git update-index --chmod=+x bin/setup_hashlink.cjs",
		"doc": "typedoc --options etc/typedoc.js && node tool/doc.js",
		"lint": "npm run build && tsc --project tsconfig.json && eslint --config=etc/eslint.config.js etc src test tool",
		"release": "npm run dist && node tool/publish.js",
		"test": "npm run build && node --test --test-reporter=spec",
		"watch": "esbuild --bundle --legal-comments=none --outfile=bin/setup_hashlink.cjs --platform=node --watch src/cli.ts"
	}
}
