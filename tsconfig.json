{
	"include": ["src/**/*.ts", "test/**/*.js", "tool/*.js"],
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"checkJs": true,
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"resolveJsonModule": true,
		"paths": {"@cedx/setup-hashlink": ["src"]},
		"strict": true,
		"target": "ESNext"
	}
}
